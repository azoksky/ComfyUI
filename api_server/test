import base64
import sys

def encode_url(url):
    """
    Encodes a URL into a base64 string.

    Parameters:
    url (str): The URL to encode.

    Returns:
    str: The base64 encoded URL.
    """
    # Convert the URL to bytes, encode it, and then decode back to a string
    url_bytes = url.encode('utf-8')
    base64_bytes = base64.urlsafe_b64encode(url_bytes)
    return base64_bytes.decode('utf-8')

def decode_url(encoded_url):
    """
    Decodes a base64 string back to the original URL.

    Parameters:
    encoded_url (str): The base64 encoded URL to decode.

    Returns:
    str: The original decoded URL.
    """
    # Convert the base64 string to bytes, decode it, and then decode back to a string
    base64_bytes = encoded_url.encode('utf-8')
    url_bytes = base64.urlsafe_b64decode(base64_bytes)
    return url_bytes.decode('utf-8')

if __name__ == "__main__":
    if len(sys.argv) != 3:
        print("Usage: python script.py <encode|decode> <url>")
        sys.exit(1)
    
    operation = sys.argv[1].lower()
    url = sys.argv[2]
    
    if operation == "encode":
        encoded_url = encode_url(url)
        print(f"Encoded URL: {encoded_url}")
    elif operation == "decode":
        decoded_url = decode_url(url)
        print(f"Decoded URL: {decoded_url}")
    else:
        print("Invalid operation. Please specify 'encode' or 'decode'.")
